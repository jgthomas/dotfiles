! font size
URxvt*font: xft:Deja Vu Sans Mono:size=12:antialias=true

! background colour
!URxvt*background: Black

! text colour
URxvt*foreground: White

! no border
URxvt*borderless: true

! no scroll bar
URxvt*scrollBar: false

! set scrollbar style to rxvt, plain, next or xterm
URxvt*scrollstyle: plain

! fade text on switch to different terminal
URxvt*fading: 30

! double buffering
URxvt*buffered: true

! enable true transparency - requires a compositor
urxvt*depth: 32
urxvt*background: rgba:0000/0000/0200/dddd

! fake transparency - copies wallpaper behind terminal
!urxvt*transparent: true
!urxvt*shading: 30


